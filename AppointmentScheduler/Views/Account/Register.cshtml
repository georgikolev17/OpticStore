@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AppointmentScheduler.Models.ViewModels.RegisterViewModel

<h2>Регистрация</h2>
<form method="post" asp-action="Register" asp-controller="Account">
    <h4>Създайте нов профил.</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    
    <div class="form-group mb-2 row">
        <label class="col-md-2" asp-for="Name">Име</label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group mb-2 row">
        <label class="col-md-2" asp-for="Email">Имейл</label>
        <div class="col-md-10">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group mb-2 row">
        <label class="col-md-2" asp-for="Password">Парола</label>
        <div class="col-md-10">
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group mb-2 row">
        <label class="col-md-2" asp-for="ConfirmPassword">Потвърдете парола</label>
        <div class="col-md-10">
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group mb-2 row">
        <label class="col-md-2" asp-for="RoleName">Роля</label>
        <div class="col-md-10">
            <select asp-for="RoleName" asp-items="@AppointmentScheduler.Utility.Helper.GetRolesForDropDown()" class="form-control"></select>
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10 offset-md-2">
            <input type="submit" value="Регистрирайте се" class="btn btn-success" />
        </div>
    </div>
    <p class="col-md-10 offset-md-2">
        <a asp-action="Login">Вход</a>
    </p>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
